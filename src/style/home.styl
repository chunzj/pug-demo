.home-page
    header
        height 106px
        a
            display inline-flex
            width calc(100%/4)
            height 100%
            justify-content center
            transition opacity 0.3 ease-out
            &:hover
                opacity 0.5
                background #c6c6c6
                color white
        @media screen and (max-width 480px)
            width 100%
            height auto
            a
                width 100%
                height 106px